<div id="<%= dom_id menu %>">
  <p>
    <strong>Imagen</strong>
    <%= image_tag menu.image %>
  </p>
  <p>
    <strong>Name:</strong>
    <%= menu.name %>
  </p>
  <p>
    <strong>Description:</strong>
    <%= menu.description %>
  </p>
  <p>
    <strong>Category:</strong>
    <%= menu.category.name %>
  </p>
  <p>
    <strong>User:</strong>
    <%= menu.user.name %>
  </p>
  <p>
    <strong>Saucers:</strong>
    <%= menu.saucers.map(&:name).sort.join(',') %>
  </p>
  <p>
    <strong>Status:</strong>
    <%= menu.status %>
  </p>
</div>
